{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "dist" // 必要に応じて出力ディレクトリを指定
    },
    "include": ["javascript-scripts/**/*"], // TypeScriptファイルをコンパイルするディレクトリを指定
    "exclude": ["node_modules"]
  }